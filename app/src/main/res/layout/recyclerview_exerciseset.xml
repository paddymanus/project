        <!--app:layout_constraintStart_toStartOf="@+id/title_s"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/title_exercise_name" />-->




    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>